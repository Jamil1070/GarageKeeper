@model IEnumerable<NET_FRAMEWORKS_EXAMEN_OPDRACHT.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1 class="page-title">Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-create">Create New</a>
</p>

<form asp-action="Index" method="get" class="search-form">
    <div class="form-group">
        <label for="search">Search:</label>
        <input type="text" class="form-control" id="search" name="search" placeholder="Search by Customer Name, License Plate, or Chassis Number.">
    </div>
    <br />
    <button type="submit" class="btn btn-search">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Order Details
            </th>
            <th>
                License Plate
            </th>
            <th>
                Chassis Number
            </th>
            <th>
                Customer Name
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="hover-row" onclick="location.href='@Url.Action("Details", new { id = item.OrderId })';">
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.LicensePlate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.ChassisNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Customer.Name)
                </td>

                <td class="action-icons">
                    <a asp-action="Edit" asp-route-id="@item.OrderId">
                        <img src="~/Images/Edit.png" alt="Edit" width="24" />
                    </a>
                </td>
                <td class="action-icons">
                    <a asp-action="Details" asp-route-id="@item.OrderId">
                        <img src="~/Images/Details.png" alt="Details" width="24" />
                    </a>
                </td>
                <td class="action-icons">
                    <a asp-action="Delete" asp-route-id="@item.OrderId">
                        <img src="~/Images/Delete.png" alt="Delete" width="24" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .page-title {
        color: #333;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .btn-create {
        background-color: #28a745; /* Green */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-create:hover {
            background-color: #218838; /* Darker Green */
        }

    .btn-search {
        background-color: #007bff; /* Blue */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
    }

        .btn-search:hover {
            background-color: #0056b3; /* Darker Blue */
        }

    .search-form {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        padding: 10px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f4f4f4;
            color: #333;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid #ddd;
        }

    .hover-row {
        transition: background-color 0.3s ease;
    }

        .hover-row:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

    .action-icons a {
        display: inline-block;
        margin: 0 5px;
    }

    .action-icons img {
        vertical-align: middle;
    }
</style>
